<div class="container">
<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to 'Remove', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<hr>
<p><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'Back to List', cocktails_path %></p>
</div>
